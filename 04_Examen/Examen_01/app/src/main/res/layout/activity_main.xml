<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_Nombre_App"
        android:layout_width="274dp"
        android:layout_height="43dp"
        android:layout_marginTop="36dp"
        android:text="Biblioteca Musical"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_Spotify"
        android:layout_width="84dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/spotify_icon"
        app:layout_constraintEnd_toEndOf="@+id/txt_Nombre_App"
        app:layout_constraintStart_toStartOf="@+id/txt_Nombre_App"
        app:layout_constraintTop_toBottomOf="@+id/txt_Nombre_App" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Lista de Álbumes Almacenados"
        android:textColor="#737373"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_Nombre_App"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/txt_Nombre_App"
        app:layout_constraintTop_toBottomOf="@+id/img_Spotify" />

    <Button
        android:id="@+id/btn_Agregar_Album"
        android:layout_width="180dp"
        android:layout_height="51dp"
        android:layout_marginBottom="68dp"
        android:backgroundTint="#4CAF50"
        android:text="Agregar Álbum"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/lv_albumes_almacenados"
        android:layout_width="282dp"
        android:layout_height="351dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_Agregar_Album"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
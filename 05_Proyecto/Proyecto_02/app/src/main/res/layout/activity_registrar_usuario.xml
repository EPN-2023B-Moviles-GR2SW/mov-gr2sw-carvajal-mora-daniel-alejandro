<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A121F"
    tools:context=".Views.RegistrarUsuario">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_Crear_Usuario"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/inputs_personalizados"
        android:paddingStart="16dp"
        android:hint="Nombre de Usuario"
        android:textColorHint="#595959"
        app:layout_constraintEnd_toEndOf="@+id/txt_Ingresa_Datos"
        app:layout_constraintStart_toStartOf="@+id/txt_Ingresa_Datos"
        app:layout_constraintTop_toBottomOf="@+id/txt_Ingresa_Datos" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_Crear_Correo"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/inputs_personalizados"
        android:paddingStart="16dp"
        android:hint="Correo Electrónico"
        android:textColorHint="#595959"
        app:layout_constraintEnd_toEndOf="@+id/input_Crear_Usuario"
        app:layout_constraintStart_toStartOf="@+id/input_Crear_Usuario"
        app:layout_constraintTop_toBottomOf="@+id/input_Crear_Usuario" />

    <Button
        android:id="@+id/btn_Regresar_Inicio_Registro"
        android:layout_width="88dp"
        android:layout_height="33dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/botones_regresar_personalizados"
        android:text="Regresar"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_Cabecera"
        app:layout_constraintEnd_toStartOf="@+id/img_Cabecera"
        app:layout_constraintTop_toTopOf="@+id/img_Cabecera"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/img_Cabecera"
        android:layout_width="114dp"
        android:layout_height="87dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/space_invaders" />

    <TextView
        android:id="@+id/txt_Crea_Cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Crea una Cuenta"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_Cabecera"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/img_Cabecera"
        app:layout_constraintTop_toBottomOf="@+id/img_Cabecera" />

    <TextView
        android:id="@+id/txt_Ingresa_Datos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ingresa tus datos:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_Crea_Cuenta"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/txt_Crea_Cuenta"
        app:layout_constraintTop_toBottomOf="@+id/txt_Crea_Cuenta" />

    <Button
        android:id="@+id/btn_Crear_Cuenta"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/botones_personalizados"
        android:text="Crear Cuenta"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/input_Crear_Contrasenia"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/input_Crear_Contrasenia"
        app:layout_constraintTop_toBottomOf="@+id/input_Crear_Contrasenia" />

    <TextView
        android:id="@+id/txt_Ya_Tienes_Cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="¿Ya tienes una cuenta? Inicia Sesión"
        android:textColor="#B8B8B8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_Crear_Cuenta"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/btn_Crear_Cuenta"
        app:layout_constraintTop_toBottomOf="@+id/btn_Crear_Cuenta"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/input_Crear_Contrasenia"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/inputs_personalizados"
        android:ems="10"
        android:paddingStart="16dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textColorHint="#595959"
        app:layout_constraintEnd_toEndOf="@+id/input_Crear_Correo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/input_Crear_Correo"
        app:layout_constraintTop_toBottomOf="@+id/input_Crear_Correo" />

</androidx.constraintlayout.widget.ConstraintLayout>
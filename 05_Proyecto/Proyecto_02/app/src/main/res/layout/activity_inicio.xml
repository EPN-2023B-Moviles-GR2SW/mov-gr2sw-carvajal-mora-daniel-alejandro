<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A121F">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/gameboy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_Nombre_App"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="GameConnect"
        android:textColor="#CDCDCD"
        android:textSize="34sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/txt_Slogan"
        android:layout_width="333dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:text="Conéctate, comparte y juega: donde cada nivel es una nueva amistad."
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#00FF00"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_Nombre_App"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/txt_Nombre_App"
        app:layout_constraintTop_toBottomOf="@+id/txt_Nombre_App" />

    <Button
        android:id="@+id/btn_Login_Inicio"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/botones_personalizados"
        android:text="Iniciar Sesión"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_Slogan"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/txt_Slogan"
        app:layout_constraintTop_toBottomOf="@+id/txt_Slogan" />

    <Button
        android:id="@+id/btn_Registrar"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/botones_personalizados"
        android:text="Registrarse"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_Login_Inicio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_Login_Inicio"
        app:layout_constraintTop_toBottomOf="@+id/btn_Login_Inicio" />

    <TextView
        android:id="@+id/txt_Terminos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Términos y Condiciones | Política de Privacidad "
        android:textColor="#B8B8B8"
        app:layout_constraintEnd_toEndOf="@+id/btn_Registrar"
        app:layout_constraintStart_toStartOf="@+id/btn_Registrar"
        app:layout_constraintTop_toBottomOf="@+id/btn_Registrar" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_layout_Album"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#121212">

    <ImageView
        android:id="@+id/img_Portada_Album"
        android:layout_width="67dp"
        android:layout_height="71dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:mipmap/sym_def_app_icon"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/tv_Nombre_Album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Nombre Álbum"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_Portada_Album"
        app:layout_constraintStart_toEndOf="@+id/img_Portada_Album"
        app:layout_constraintTop_toTopOf="@+id/img_Portada_Album"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/tv_Artista_Album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Artista Album"
        android:textColor="#A3A3A3"
        app:layout_constraintEnd_toEndOf="@+id/tv_Nombre_Album"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_Nombre_Album"
        app:layout_constraintTop_toBottomOf="@+id/tv_Nombre_Album" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".Views.Home">

    <TextView
        android:id="@+id/txt_Sugerencia_del_Dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Sugerencias para hoy"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Recycler_Sugerencia_del_Dia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_Avatar2"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/spotify_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Footer_Home"
        android:layout_width="411dp"
        android:layout_height="70dp"
        android:background="#232323"
        android:backgroundTint="#232323"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/img_btn_Home_Inicio"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="28dp"
        android:background="#232323"
        android:scaleType="fitCenter"
        android:src="@drawable/icono_home"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/Footer_Home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UseAppTint" />

    <TextView
        android:id="@+id/txt_Inicio_Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Inicio"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/img_btn_Home_Inicio"
        app:layout_constraintStart_toStartOf="@+id/img_btn_Home_Inicio"
        app:layout_constraintTop_toBottomOf="@+id/img_btn_Home_Inicio" />

    <ImageButton
        android:id="@+id/img_btn_Buscar_Home"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="84dp"
        android:background="#232323"
        android:scaleType="fitCenter"
        android:src="@drawable/icono_buscar"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/img_btn_Home_Inicio"
        app:layout_constraintStart_toEndOf="@+id/img_btn_Home_Inicio"
        app:layout_constraintTop_toTopOf="@+id/img_btn_Home_Inicio"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="UseAppTint" />

    <TextView
        android:id="@+id/txt_Buscar_Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Buscar"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/img_btn_Buscar_Home"
        app:layout_constraintStart_toStartOf="@+id/img_btn_Buscar_Home"
        app:layout_constraintTop_toBottomOf="@+id/img_btn_Buscar_Home" />

    <ImageButton
        android:id="@+id/img_btn_Biblioteca_Home"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="84dp"
        android:background="#232323"
        android:scaleType="fitCenter"
        android:src="@drawable/icono_biblioteca"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/img_btn_Buscar_Home"
        app:layout_constraintStart_toEndOf="@+id/img_btn_Buscar_Home"
        app:layout_constraintTop_toTopOf="@+id/img_btn_Buscar_Home"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="UseAppTint" />

    <TextView
        android:id="@+id/txt_TuBiblioteca_Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Tú biblioteca"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/img_btn_Biblioteca_Home"
        app:layout_constraintStart_toStartOf="@+id/img_btn_Biblioteca_Home"
        app:layout_constraintTop_toBottomOf="@+id/img_btn_Biblioteca_Home" />

    <Button
        android:id="@+id/btn_Musica"
        android:layout_width="82dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/botones_personalizados"
        android:text="Música"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/img_Avatar2"
        app:layout_constraintStart_toEndOf="@+id/btn_Todas2"
        app:layout_constraintTop_toTopOf="@+id/img_Avatar2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_Podcast"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/botones_personalizados"
        android:text="Podcasts"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/img_Avatar2"
        app:layout_constraintStart_toEndOf="@+id/btn_Musica"
        app:layout_constraintTop_toTopOf="@+id/img_Avatar2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_Todas2"
        android:layout_width="82dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/botones_personalizados"
        android:backgroundTint="#1DB954"
        android:text="Todas"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/img_Avatar2"
        app:layout_constraintStart_toEndOf="@+id/img_Avatar2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Recycler_Artistas_Recientes"
        android:layout_width="365dp"
        android:layout_height="127dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/Footer_Home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_Artistas_Recientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Artistas escuchados recientemente"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Recycler_Artistas_Recientes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Recycler_Sugerencia_del_Dia"
        android:layout_width="365dp"
        android:layout_height="170dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/txt_Artistas_Recientes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Recycler_Inicio_1"
        android:layout_width="182dp"
        android:layout_height="175dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_Sugerencia_del_Dia"
        app:layout_constraintEnd_toEndOf="@+id/txt_Sugerencia_del_Dia"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_Sugerencia_del_Dia" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Recycler_Inicio_2"
        android:layout_width="182dp"
        android:layout_height="175dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/Recycler_Inicio_1"
        app:layout_constraintStart_toEndOf="@+id/Recycler_Inicio_1"
        app:layout_constraintTop_toTopOf="@+id/Recycler_Inicio_1"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:background="#121212">

    <ImageView
        android:id="@+id/img_Sugerencia"
        android:layout_width="131dp"
        android:layout_height="128dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:mipmap/sym_def_app_icon"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/tv_Sugerencia_Album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Nombre Ãlbum"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_Sugerencia"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/img_Sugerencia"
        app:layout_constraintTop_toBottomOf="@+id/img_Sugerencia" />

    <TextView
        android:id="@+id/tv_Info_Adicional"
        android:layout_width="131dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:text="Info. Adicional"
        android:textColor="#A3A3A3"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_Sugerencia_Album"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_Sugerencia_Album"
        app:layout_constraintTop_toBottomOf="@+id/tv_Sugerencia_Album" />
</androidx.constraintlayout.widget.ConstraintLayout>